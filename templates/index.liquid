{% section 'announcement' %}

{% if shop.name %}
<header class="bg-gray-900 text-white p-4">
  <div class="max-w-7xl mx-auto flex justify-between items-center">
    <h1 class="text-xl font-bold">{{ shop.name }}</h1>
    <nav class="space-x-4">
      <a href="#" class="hover:text-gray-300">Home</a>
      <a href="#" class="hover:text-gray-300">Shop</a>
      <a href="#" class="hover:text-gray-300">About</a>
    </nav>
  </div>
</header>
{% endif %}

<main class="max-w-7xl mx-auto p-8">
  <h1 class="text-3xl font-bold mb-8">{{ collections.all.title }}</h1>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {% for product in collections.all.products %}
      <div class="border rounded-lg overflow-hidden">
        <div class="aspect-w-16 aspect-h-9 bg-gray-100">
          <div 
            class="w-full h-64 product-image"
            style="background-image: url('{{ product.featured_image }}')"
          ></div>
        </div>
        <div class="p-4">
          <h2 class="font-bold">{{ product.title }}</h2>
          <p class="text-gray-600">{{ product.price }}</p>
          <button class="mt-2 w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700">
            {% if product.available %}
              Add to Cart
            {% else %}
              Sold Out
            {% endif %}
          </button>
        </div>
      </div>
    {% endfor %}
  </div>
</main>

{% include 'newsletter-signup' %}